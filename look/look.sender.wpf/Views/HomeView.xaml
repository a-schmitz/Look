<UserControl xmlns:WPFSpark="clr-namespace:WPFSpark;assembly=WPFSpark" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:wpf="clr-namespace:look.sender.wpf"
        xmlns:controls="clr-namespace:look.sender.wpf.controls;assembly=look.sender.wpf.controls"
        mc:Ignorable="d" 
        x:Class="look.sender.wpf.Views.HomeView"
        d:DesignHeight="1024" d:DesignWidth="768">
    <Border BorderBrush="#FF4B4B4B" BorderThickness="1" >
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <ListView Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <controls:FavoriteItem></controls:FavoriteItem>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListItem/>
                <ListItem/>
                <ListItem/>
                <ListItem/>
                <ListItem/>
                <ListItem/>
            </ListView>

            <ScrollViewer Grid.Column="1" Grid.Row="1" Background="#FF2E3030">
                <ItemsControl x:Name="sharedWindows" ItemsSource="{Binding ShareableWindows}" VerticalAlignment="Top" HorizontalAlignment="Stretch" 
                          >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WPFSpark:FluidWrapPanel HorizontalAlignment="Stretch"
							ClipToBounds="False"
							VerticalAlignment="Stretch"
							Background="Transparent"
							ItemHeight="105"
							ItemWidth="255"
							IsComposing="True"
							Orientation="Horizontal"
							DragOpacity="0.75"
							DragScale="1.9">
                                <WPFSpark:FluidWrapPanel.ElementEasing>
                                    <BackEase EasingMode="EaseOut" Amplitude="0.35" />
                                </WPFSpark:FluidWrapPanel.ElementEasing>
                                <WPFSpark:FluidWrapPanel.DragEasing>
                                    <BackEase EasingMode="EaseOut" Amplitude="0.65" />
                                </WPFSpark:FluidWrapPanel.DragEasing>
                            </WPFSpark:FluidWrapPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:WindowTile Width="250" Height="100" ApplicationImage="{Binding Icon}" 
							ApplicationName="{Binding Application}" WindowTitle="{Binding Title}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <ToolBarTray Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Height="Auto">
                <ToolBar HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="35">
                    <Button>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="16" Height="16" >
                                <Rectangle.Fill>
                                    <VisualBrush Visual="{StaticResource appbar_disconnect}" />
                                </Rectangle.Fill>
                            </Rectangle>
                            <Label>Connect to all</Label>
                        </StackPanel>
                    </Button>

                    <Button>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="16" Height="16">
                                <Rectangle.Fill>
                                    <VisualBrush Visual="{StaticResource appbar_connect}" />
                                </Rectangle.Fill>
                            </Rectangle>
                            <Label>Disconnect all</Label>
                        </StackPanel>
                    </Button>
                    <Button>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="16" Height="16" >
                                <Rectangle.Fill>
                                    <VisualBrush Visual="{StaticResource appbar_disconnect}" />
                                </Rectangle.Fill>
                            </Rectangle>
                            <Label>Share all</Label>
                        </StackPanel>
                    </Button>
                </ToolBar>
            </ToolBarTray>
        </Grid>
    </Border>
</UserControl>
