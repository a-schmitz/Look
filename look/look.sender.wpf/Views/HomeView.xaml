             xmlns:views="clr-namespace:look.sender.wpf.Views"
             xmlns:interfaces="clr-namespace:look.sender.wpf.Interfaces"
             mc:Ignorable="d" 
        x:Class="look.sender.wpf.Views.HomeView"
        d:DesignHeight="500" d:DesignWidth="768">

    <Border BorderBrush="#FF4B4B4B" BorderThickness="1">


        <Grid>
            <Grid.Resources>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.AnimatedSingleRowTabControl.xaml" />
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
            </Grid.RowDefinitions>

            <!--Header-->
            <Border BorderBrush="White" Grid.Column="0" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal">
                    <Button Background="{StaticResource GradientDark}" Width="30" Height="30" Margin="5,0,0,0" Click="Button_Click">
                        <Rectangle Width="15" Height="15">
                            <Rectangle.Fill>
                                <VisualBrush Visual="{StaticResource appbar_magnify_add}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Button>
                    <Label Content="Favorites" FontSize="18" Margin="0"></Label>
                </StackPanel>
            </Border>

            <!--Quickadd Bar-->
            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1" VerticalAlignment="Stretch" Margin="0,5,0,0">
                <Border Background="{StaticResource GradientDark}" Height="30"  Margin="8,0,9,0" BorderThickness="1" BorderBrush="White" CornerRadius="5">
                    <TextBox Width="189" controls1:TextBoxHelper.Watermark="Quickadd" FontSize="14" BorderThickness="0" Background="{x:Null}"></TextBox>
                </Border>
                <Button Width="30" Height="30" Background="{StaticResource GradientDark}">
                    <Rectangle Width="15" Height="15">
                        <Rectangle.Fill>
                            <VisualBrush Visual="{StaticResource appbar_add}" />
                        </Rectangle.Fill>
                    </Rectangle>
                </Button>
            </StackPanel>

            <!-- List of Favorites -->
            <ListView x:Name="FavoriteList" Grid.Column="0" Grid.Row="2" BorderThickness="0,0,0,0"  ItemsSource="{Binding Favorites}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <controls:FavoriteItem Margin="5,0"  Title="{Binding Name}" SubTitle="{Binding IpAddress}"></controls:FavoriteItem>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!--Favorites Tabs-->
            <TabControl Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" ItemsSource="{Binding SelectedFavorite.Tabs}" 
                        SelectedItem="{Binding SelectedFavorite.SelectedViewModel}">
                <TabControl.Resources>
                    <DataTemplate DataType="{x:Type viewModels:RemoteViewerViewModel}">
                        <views:RemoteViewerView />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:SharedWindowsViewModel}">
                        <views:SharedWindowsView  />
                    </DataTemplate>
                </TabControl.Resources>
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Header}"/>
                    </DataTemplate>
                </TabControl.ItemTemplate>
               
            </TabControl>
            
